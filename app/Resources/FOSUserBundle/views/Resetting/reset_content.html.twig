{% trans_default_domain 'FOSUserBundle' %}

<h2>RÃ©initialisation du mot de passe</h2>

<div class="clear"></div> <!-- End .clear -->
<div class="content-box"><!-- Start Content Box -->
    <div class="content-box-header">

        <div class="clear"></div>

    </div> <!-- End .content-box-header -->

    <div class="content-box-content">

            <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset" novalidate>
                <p>
                    {{ form_label(form.plainPassword.first, 'Nouveau mot de passe') }}
                    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'text-input small-input validate[required]'} }) }}
                    <div>{{ form_errors(form.plainPassword.first) }}</div>
                </p>
                <p>
                    {{ form_label(form.plainPassword.second, 'Verification') }}
                    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'text-input small-input validate[required]'} }) }}
                </p>
                <div>
                    <input type="submit" value="{{ 'resetting.reset.submit'|trans }}" class="button" />
                </div>
                {{ form_rest(form) }}
            </form>
    </div> <!-- End .content-box-content -->
</div> <!-- End .content-box -->
